<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <!--通用ToolBar-->
    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>
    <!--通用Title的左侧返回按钮-->
    <style name="ToolBar_iv_Left">
        <item name="android:layout_width">@dimen/toolbar_icon_dimen</item>
        <item name="android:layout_height">@dimen/toolbar_icon_dimen</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/icon_back</item>
        <item name="android:background">?android:actionBarItemBackground</item>
        <item name="android:padding">13dp</item>
    </style>
    <!--通用Title的右侧按钮-->
    <style name="ToolBar_iv_Right">
        <item name="android:layout_width">@dimen/toolbar_icon_dimen</item>
        <item name="android:layout_height">@dimen/toolbar_icon_dimen</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:actionBarItemBackground</item>
        <item name="android:padding">13dp</item>
    </style>
    <!--通用Title的TextView-->
    <style name="ToolBar_tv_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/toolbar_title_haveBack_marginStart</item>
        <item name="android:layout_marginRight">@dimen/toolbar_title_haveBack_marginEnd</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--通用的粗的View-->
    <style name="View_thick">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">@color/view</item>
    </style>
    <!--通用的细的View-->
    <style name="View_thin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/view</item>
    </style>
</resources>
